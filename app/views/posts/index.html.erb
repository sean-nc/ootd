<h1>Posts</h1>

<% @posts.each do |post| %>
  <% if @post.image.attached? %>
      <%= image_tag @post.image %>
  <% end %>
  <p><%= post.content %></p>

  <%= link_to 'Show', post %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'New Post', new_post_path %>
